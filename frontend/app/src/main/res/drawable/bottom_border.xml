<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="@color/background" /> <!-- Background color of the card -->
    <size android:height="80dp"/> <!-- Fixed height of the card -->
    <stroke
        android:width="1dp"
        android:color="@color/red"
        android:dashGap="0dp"
        android:dashWidth="0dp" />
    <padding android:bottom="1dp"/> <!-- To ensure the border appears at the bottom -->

    <corners android:radius="0dp"/> <!-- No rounded corners -->
</shape>
