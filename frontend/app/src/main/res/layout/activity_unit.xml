<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".UnitActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add New Unit"
            android:textSize="28dp"
            android:textColor="@color/colorSecondary"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:textStyle="bold"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/unitNameLayout"
            style="CustomTextInputOutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/unitName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Unit Name"
                android:inputType="textAutoComplete" />
        </com.google.android.material.textfield.TextInputLayout>

            <!-- Width Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/unitWidthInputLayout"
            style="CustomTextInputOutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/unitWidthInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Unit Width"
                android:inputType="numberDecimal"/>
        </com.google.android.material.textfield.TextInputLayout>

            <!-- Height Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/unitHeightInputLayout"
            style="CustomTextInputOutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/unitHeightInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Unit Height"
                android:inputType="numberDecimal"/>
        </com.google.android.material.textfield.TextInputLayout>

            <!-- Depth Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/unitDepthInputLayout"
            style="CustomTextInputOutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/unitDepthInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Unit Depth"
                android:inputType="numberDecimal"/>
        </com.google.android.material.textfield.TextInputLayout>

<!--            &lt;!&ndash; Save Button &ndash;&gt;-->


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Categories Allowed"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:textSize="18dp"
            android:textColor="@color/colorSecondary"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/checkbox_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:orientation="vertical">
            </LinearLayout>
        </ScrollView>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/buttonContainer"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="32dp"
            android:background="@color/colorPrimary"
            android:clickable="true"
            android:focusable="true">
            <Button
                android:id="@+id/saveButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:layout_gravity="end"/>



            <!--            <ImageView-->
            <!--                android:id="@+id/logoutButtonIcon"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_marginStart="6dp"-->
            <!--                android:src="@drawable/baseline_add_24"-->
            <!--                app:layout_constraintBottom_toBottomOf="parent"-->
            <!--                app:layout_constraintStart_toEndOf="@+id/logOutButtonText"-->
            <!--                app:layout_constraintTop_toTopOf="parent" />-->

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/buttonLoader"
                android:layout_width="90dp"
                android:layout_height="90dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:lottie_rawRes="@raw/loading"
                android:visibility="gone"
                app:lottie_autoPlay="false"
                app:lottie_loop="false"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>