<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/background">

    <!-- Header for the Bottom Sheet -->
    <TextView
        android:id="@+id/filters_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filters"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal" />

    <!-- Action Types Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Action Types"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:textColor="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:gravity="start">

        <!-- Action Type Buttons -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAll"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="All"
            android:textSize="12dp"
            android:background="@drawable/btn_gray"
            android:textColor="#f2f2f2"
            android:layout_marginEnd="12dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAdd"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Add"
            android:background="@drawable/btn_gray"
            android:textColor="#f2f2f2"
            android:textSize="12dp"
            android:layout_marginEnd="12dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnModify"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Modify"
            android:background="@drawable/btn_gray"
            android:textColor="#f2f2f2"
            android:textSize="12dp"
            android:layout_marginEnd="12dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDelete"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Delete"
            android:textSize="12dp"
            android:background="@drawable/btn_gray"
            android:textColor="#f2f2f2"/>
    </LinearLayout>

    <!-- User Role Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Role"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:textColor="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:gravity="start">

        <!-- Action Type Buttons -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAdmin"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Admin"
            android:background="@drawable/btn_gray"
            android:textColor="#f2f2f2"
            android:layout_marginEnd="12dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnManager"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Manager"
            android:background="@drawable/btn_gray"
            android:textColor="#f2f2f2"
            android:textSize="12dp"
            android:layout_marginEnd="12dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnNormalUser"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Normal User"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:textSize="12dp"
            android:background="@drawable/btn_gray"
            android:textColor="#f2f2f2"/>
    </LinearLayout>

    <!-- Date Range Spinner -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date Range"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:textColor="#000000" />

    <Spinner
        android:id="@+id/dateRangeSpinner"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="32dp"
        android:entries="@array/date_range_options"/>
    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Apply"
        android:layout_gravity="end"/>
</LinearLayout>
