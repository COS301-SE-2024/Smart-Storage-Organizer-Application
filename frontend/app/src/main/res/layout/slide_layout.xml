<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#F2F2F2"
    android:gravity="center">

    <ImageView
        android:id="@+id/slide_image"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:src="@drawable/welcome" />

    <TextView
        android:id="@+id/slide_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Your Smart Storage Solution"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_marginTop="24dp" />

    <TextView
        android:id="@+id/slide_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Say goodbye to clutter and lost items! Our app helps you organize your belongings with ease and find them in seconds. Letâ€™s get started."
        android:textSize="16sp"
        android:textColor="@color/gray"
        android:gravity="center"
        android:layout_marginTop="16dp" />

    <!-- Button for the last slide -->
    <Button
        android:id="@+id/get_started_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Started"
        android:visibility="gone"
        android:layout_marginTop="32dp" />
</LinearLayout>
