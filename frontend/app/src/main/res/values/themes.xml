<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SmartStorageOrganizer" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.SmartStorageOrganizer" parent="Base.Theme.SmartStorageOrganizer" />

    <style name="CustomTextInputOutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeColor">@color/colorPrimary</item> <!-- Change this to your desired color -->
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxCornerRadiusTopStart">32dp</item> <!-- Adjust radius as needed -->
        <item name="boxCornerRadiusTopEnd">32dp</item>
        <item name="boxCornerRadiusBottomEnd">32dp</item>
        <item name="boxCornerRadiusBottomStart">32dp</item>
    </style>

    <style name="CustomTextInputFilledBox.White" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@android:color/white</item> <!-- Set the box background color to white -->
        <item name="boxStrokeColor">@color/colorPrimary</item> <!-- Optional: Set the stroke color -->
        <item name="hintTextColor">@color/colorPrimary</item> <!-- Optional: Set the hint text color -->
    </style>

    <style name="RoundedCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item> <!-- Adjust the radius as needed -->
    </style>


</resources>